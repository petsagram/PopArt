<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MostFamousPictures" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="HeadingTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:textSize">3mm</item>
        <item name="android:textColor">@color/mainCardBackgroundColor</item>
    </style>

    <style name="SecondaryTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ArtistNameTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:textSize">2.8mm</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:textSize">3.6mm</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ArtistLongevityTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:textSize">2.6mm</item>
        <item name="android:textColor">@color/mainCardBackgroundColor</item>
    </style>

    <style name="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>